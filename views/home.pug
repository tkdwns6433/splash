  body(style="{display:flex;padding:0;margin:0;}", class='bg-info')
    div(class="modal fade player", tabindex="-1", role="dialog", aria-labelledby="myLargeModalLabel",aria-hidden="true", id='modal-player')
      div(class="modal-dialog modal-md", role="document")
        div(class="modal-content")
          div(class="modal-body mb-0 p-0", id='modal-player-content')
    div(class="modal fade bd-example-modal-lg", tabindex="-1", role="dialog", aria-labelledby="myLargeModalLabel",aria-hidden="true", id='modal-synopsis')
      div(class="modal-dialog modal-lg")
        div(class="modal-content")
          div(class="modal-body")
            div(class="row")
              div(class="col-md-4")
                img(id='modal-poster', class='img-responsive', width="300px", height="445px")
