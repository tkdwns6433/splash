                p(id='Year') 1990
                p(id='Runtime') 5 Min
                h3(id='Genre') Horror
                h3(id='Director') vaughn Stein
                h3(id='Actors')
                p(id='Plot') ajdiowjdwioajdioawjdiowajdioajdioajdioajdioawjdioawjdawiojdw
                h3(id='Language') English
                h3(id='Metascore') 25
                p(id='Path') vods/terminal.mp4
          div(class="modal-footer")
            button(id='play-button', type="button", class="btn btn-secondary", onclick="playVideo()") Play  
    div(align='center', class='bg-primary')
      h1 Welcome To Splash!
    div(align='center', class='container, bg-info', id='posters')
      h1(id='gnb') VOD LIST
      br
      button(class='btn btn-primary', align='left', type='button', id='backButton', onClick="goBack()") Go Back
      br
      br
      br
      div(class='row', id='p-row')
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js")
